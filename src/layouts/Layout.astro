---
import "@/styles/global.css";
import Header from "@/components/core/Header.astro";
import Footer from "@/components/core/Footer.astro";
import SeoHead from "./SeoHead.astro";
import { navLinks } from "@/data/navLinks";

interface Props {
  pageTitle: string;
  description: string;
  image?: string;
  imageAlt?: string;
  canonicalURL?: string;
  noindex?: boolean;
  ogType?: "website" | "article" | "profile";
  lang?: string;
  class?: string;
  pubDate?: Date;
}

const { class: className = "", lang = "en" } = Astro.props;
const [, currentUrl] = Astro.url.pathname.split("/");
---

<!doctype html>
<html lang={lang} dir="ltr">
  <SeoHead {...Astro.props} />
  <body class={className}>
    <Header menuLinks={navLinks} activeMenu={`/${currentUrl}`} />
    <slot />
    <Footer />
  </body>
</html>
