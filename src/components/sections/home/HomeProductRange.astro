---
import { ArrowRight } from '@lucide/astro';
---

<section class="py-20 bg-base-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-base-content mb-4">
        Our Product Range
      </h2>
      <p class="text-base-content/70 text-lg max-w-2xl mx-auto mb-8">
        Explore our comprehensive selection of industrial heating components and materials
      </p>
      <a href="/product" class="btn btn-primary btn-lg gap-2">
        View All Products
