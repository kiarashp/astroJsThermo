---
import { CircleCheck } from "@lucide/astro";
import Image from "astro/components/Image.astro";
import moreinfo from "@/assets/home/moreinfo.jpeg"; 

const features = [
  "Premium 99% Alumina ceramics",
  "Unmatched durability and longevity",
  "Superior heat resistance",
  "Optimal performance in extreme conditions",
];
---

<section class="py-20 bg-neutral/50 text-neutral-content relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Content Side -->
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-content mb-6">
          Exceptional Material Quality
        </h2>
        <p class="text-neutral-content/80 text-lg mb-8">
          At Thermo Group, we use premium ceramics such as 99% Alumina for
          unmatched durability, heat resistance, and performance.
        </p>

        <!-- Features List -->
        <div class="space-y-4 mb-8">
          {
            features.map((feature) => (
              <div class="flex items-start gap-3">
                <CircleCheck
                  size={24}
                  class="text-primary flex-shrink-0 mt-1"
                />
                <span class="text-neutral-content/90">{feature}</span>
              </div>
            ))
          }
        </div>

        <a href="/contact" class="btn btn-primary btn-lg">
          Contact Us for More Information
        </a>
      </div>

      <!-- Image Side -->
      <div class="relative">
        <div class="relative rounded-lg overflow-hidden shadow-2xl">
          <Image
            src={moreinfo}
            alt="High-quality ceramic materials"
            class="w-full h-96 object-cover"
          />

          <div
            class="absolute inset-0 bg-gradient-to-t from-neutral/60 to-transparent"
          >
          </div>
        </div>

        <!-- Decorative Glow -->
        <div
          class="absolute -bottom-6 -right-6 w-48 h-48 bg-primary rounded-full blur-3xl opacity-20"
        >
        </div>
      </div>
    </div>
  </div>
</section>
