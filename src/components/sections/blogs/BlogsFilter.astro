---
const filters = [
  "All",
  "Materials",
  "Heating Elements",
  "Energy Efficiency",
  "Maintenance",
];
---

<section class="py-8 bg-base-200 border-b border-base-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div id="filters" class="flex flex-wrap gap-3">
      {
        filters.map((filter, i) => (
          <span
            class={`badge badge-lg cursor-pointer transition-colors ${
              i === 0
                ? "badge-primary text-primary-content"
                : "badge-outline hover:border-primary hover:text-primary"
            }`}
            data-filter={filter}
          >
            {filter}
          </span>
        ))
      }
    </div>
  </div>
</section>
<script>
  // Run after load
  const filters = document.querySelectorAll<HTMLSpanElement>("#filters .badge");

  filters.forEach((badge)  => {
    badge.addEventListener("click", () => {
      // 1️⃣ Remove primary class from all
      filters.forEach((b) =>
        b.classList.remove("badge-primary", "text-primary-content")
      );
      filters.forEach((b) =>
        b.classList.add("badge-outline", "hover:border-primary", "hover:text-primary")
      );

      // 2️⃣ Add primary style to the clicked one
      badge.classList.remove("badge-outline", "hover:border-primary", "hover:text-primary");
      badge.classList.add("badge-primary", "text-primary-content");

      // 3️⃣ Filter your blogs here
      const selected = badge.dataset.filter;
      console.log("Filtering blogs by:", selected);
      // You can call a function or emit a custom event here to trigger filtering logic
    });
  });
</script>