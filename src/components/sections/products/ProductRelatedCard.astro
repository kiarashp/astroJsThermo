---
import type { CollectionEntry } from "astro:content";
import Image from "astro/components/Image.astro";
interface Props {
  products: CollectionEntry<"products">[];
}
const { products } = Astro.props;
---

{
  products.length > 0 ? (
    <div>
      <h2 class="text-3xl font-bold text-base-content mb-8">
        Related Products
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {products.map((eachProduct) => {
          return (
            <div class="card bg-base-200 hover:shadow-xl transition-shadow">
              <figure class="aspect-video bg-base-300">
                <Image
                  src={eachProduct.data.thumbnail}
                  alt={eachProduct.data.title}
                  class="w-full h-full object-cover"
                />
              </figure>
              <div class="card-body">
                <div class="badge badge-primary badge-sm">
                  {eachProduct.data.category}
                </div>
                <h3 class="card-title text-lg mt-2">Related Product</h3>
                <p class="text-base-content/70 text-sm">
                  High-quality industrial product for manufacturing
                  applications.
                </p>
                <div class="card-actions justify-end mt-4">
                  <a href="#" class="btn btn-primary btn-sm">
                    View Details
                  </a>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  ) : null
}
