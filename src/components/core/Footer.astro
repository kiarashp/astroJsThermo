---
import { Building2 } from "@lucide/astro";

// Data arrays
const quickLinks = ["Home", "Blogs", "Contact", "About Us"];
const topProducts = [
  "Silicon Carbide Rollers",
  "Ceramic Rollers",
  "Thermal Insulation",
  "Molybdenum Elements"
];
const contacts = [
  "Phone: +98 21 33930946",
  "Mobile: +98 912 8162522",
  "Email: thermotechnology1@yahoo.com"
];
---

<footer class="bg-neutral text-base-content pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">

      <!-- Logo + Description -->
      <div>
        <div class="flex items-center gap-2 mb-4 cursor-pointer">
          <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
            <Building2 class="w-6 h-6 text-primary-content" />
          </div>
          <div>
            <h3 class="text-base-content">Thermo Group</h3>
          </div>
        </div>
        <p class="text-base-content/70 text-sm">
          Manufacturing and supplying high-quality industrial heating components since decades.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-base-content mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <button class="text-base-content/70 hover:text-primary transition-colors text-sm">
                {link}
              </button>
            </li>
          ))}
        </ul>
      </div>

      <!-- Top Products -->
      <div>
        <h4 class="text-base-content mb-4">Top Products</h4>
        <ul class="space-y-2">
          {topProducts.map(product => (
            <li>
              <span class="text-base-content/70 text-sm">{product}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-base-content mb-4">Contact</h4>
        <ul class="space-y-2 text-base-content/70 text-sm">
          {contacts.map(contact => (
            <li>{contact}</li>
          ))}
        </ul>
      </div>

    </div>

    <!-- Separator -->
    <div class="shrink-0 h-px w-full bg-base-300 mb-8"></div>

    <!-- Bottom -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-base-content/70">
      <p>Â© 2025 Thermo Group. All rights reserved.</p>
      <p>Website design and optimization by <span class="text-primary">KIAPMD</span></p>
    </div>
  </div>
</footer>
